{
  "name": "umqombothi-component-library",
  "version": "1.2.8",
  "private": false,
  "main": "build/index.js",
  "module": "build/index.js",
  "style": "build/bunlde.css",
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^4.3.1",
    "react-bootstrap": "0.32.4",
    "styled-components": "^4.3.2"
  },
  "peerDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "files": [
    "build/*.{js,css}"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pimp-my-book/umqombothi-component-library.git"
  },
  "scripts": {
    "storybook": "start-storybook",
    "build-storybook": "build-storybook -c .storybook",
    "start": "npm-run-all --parallel watch:css start:react",
    "build": "npm-run-all --parallel build:css build:bundle ",
    "build:css": "postcss src/css/tailwind.css -o src/index.css",
    "build:bundle": "rollup --config rollup.config.js",
    "build:es": "rm -rf dist && babel src --out-dir dist --copy-files",
    "watch:css": "postcss src/css/tailwind.css -o src/index.css -w",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@storybook/react": "^5.1.11",
    "@testing-library/dom": "^6.1.0",
    "@testing-library/jest-dom": "^4.0.0",
    "@testing-library/react": "^9.1.2",
    "autoprefixer": "^9.6.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "react-scripts": "3.0.1",
    "rollup": "^1.24.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-css-only": "^1.0.0",
    "rollup-plugin-svg": "^2.0.0",
    "tailwindcss": "^1.0.5"
  },
  "bit": {
    "env": {
      "compiler": "bit.envs/compilers/react@1.0.2"
    },
    "componentsDefaultDirectory": "components/{name}",
    "packageManager": "npm"
  }
}